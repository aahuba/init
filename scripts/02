echo "0 4 * * 1 sudo touch /var/log/update_script.log && sudo chmod a+x /var/log/update_script.log && echo \"(sudo apt-get update && apt-get upgrade) >> /var/log/update_script.log\" > update && chmod a+x update && sudo ./update && rm ./update" | crontab - | sudo touch /var/log/update_script.log && sudo chmod a+x /var/log/update_script.log && echo "(sudo apt-get update && apt-get upgrade) >> /var/log/update_script.log" > update && chmod a+x update && sudo ./update && rm ./update